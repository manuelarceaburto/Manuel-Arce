@model CustomerViewModel
@{
    ViewData["Title"] = "Add Customer";
}

<div class="page-header">
    <h1>Add New Customer</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="card" style="max-width: 800px;">
    <div class="card-header">Customer Information</div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Contoso Ltd" />
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="TenantId" class="form-label"></label>
                <input asp-for="TenantId" class="form-control" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" />
                <span asp-validation-for="TenantId" class="field-validation-error"></span>
                <small class="form-text">Azure Active Directory Tenant ID</small>
            </div>

            <div class="form-group">
                <label asp-for="ClientId" class="form-label"></label>
                <input asp-for="ClientId" class="form-control" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" />
                <span asp-validation-for="ClientId" class="field-validation-error"></span>
                <small class="form-text">Application (client) ID from App Registration</small>
            </div>

            <div class="form-group">
                <label asp-for="ClientSecret" class="form-label"></label>
                <input asp-for="ClientSecret" class="form-control" type="password" placeholder="Enter client secret" />
                <span asp-validation-for="ClientSecret" class="field-validation-error"></span>
                <small class="form-text">Client secret value from App Registration</small>
            </div>

            <div class="form-group">
                <label asp-for="SubscriptionId" class="form-label"></label>
                <input asp-for="SubscriptionId" class="form-control" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx (Optional)" />
                <span asp-validation-for="SubscriptionId" class="field-validation-error"></span>
                <small class="form-text">Optional: Specific subscription ID to monitor</small>
            </div>

            <div class="alert alert-info">
                <strong>Required Azure Permissions:</strong><br/>
                The app registration must have <strong>Reader</strong> role at the subscription or resource group level.
                Additionally, grant <strong>Monitoring Reader</strong> for metrics access.
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Create Customer</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
