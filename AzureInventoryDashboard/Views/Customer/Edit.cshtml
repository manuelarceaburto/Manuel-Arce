@model CustomerViewModel
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="page-header">
    <h1>Edit Customer</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="card" style="max-width: 800px;">
    <div class="card-header">Customer Information</div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="TenantId" class="form-label"></label>
                <input asp-for="TenantId" class="form-control" />
                <span asp-validation-for="TenantId" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientId" class="form-label"></label>
                <input asp-for="ClientId" class="form-control" />
                <span asp-validation-for="ClientId" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientSecret" class="form-label"></label>
                <input asp-for="ClientSecret" class="form-control" type="password" />
                <span asp-validation-for="ClientSecret" class="field-validation-error"></span>
                <small class="form-text">Enter new secret or leave unchanged</small>
            </div>

            <div class="form-group">
                <label asp-for="SubscriptionId" class="form-label"></label>
                <input asp-for="SubscriptionId" class="form-control" />
                <span asp-validation-for="SubscriptionId" class="field-validation-error"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
