@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Azure Inventory Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card card">
            <div class="login-header">
                <h1>Azure Inventory Dashboard</h1>
                <p class="text-muted">Sign in to continue</p>
            </div>

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="validation-summary-errors"></div>
                }

                <div class="form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" autofocus />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Sign In</button>

                <div class="mt-4 text-center">
                    <p class="text-muted" style="font-size: 0.875rem;">
                        Default credentials: <strong>admin</strong> / <strong>Admin@123</strong>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
