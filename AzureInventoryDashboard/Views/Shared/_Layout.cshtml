<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Azure Inventory Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <div class="d-flex align-items-center gap-3">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            Azure Inventory Dashboard
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="navbar-nav d-flex gap-2" style="flex-direction: row;">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                <a class="nav-link" asp-controller="Customer" asp-action="Index">Customers</a>
                            </div>
                        }
                    </div>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex align-items-center gap-3">
                            <span class="text-muted">Welcome, @User.Identity.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-secondary btn-sm">Logout</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" style="min-height: calc(100vh - 200px); padding: 2rem 0;">
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Azure Inventory Dashboard - Crazure Consulting</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
